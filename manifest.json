{
  "manifest_version": 3,
  "name": "PromptBoost - AI Text Optimizer",
  "version": "1.0.0",
  "description": "Enhance your text with AI by triple-pressing spacebar. Supports OpenAI, Claude, and custom LLM APIs.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "src/core/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/core/content.js"],
      "css": ["src/core/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/ui/popup/popup.html",
    "default_title": "PromptBoost Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "src/ui/options/options.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/core/content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
